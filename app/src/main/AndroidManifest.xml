<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.myappforuniversity">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MyAppforuniversity"
        android:usesCleartextTraffic="true">
        <activity android:name=".Setting"        android:screenOrientation="portrait"  ></activity>
        <activity android:name=".chat2Activity" android:screenOrientation="portrait"/>
        <activity android:name=".chatActivity"  android:screenOrientation="portrait"/>
        <activity android:name=".eventactivity"  android:screenOrientation="portrait"/>
        <activity android:name=".linkcreate"  android:screenOrientation="portrait"/>
        <activity
            android:name=".NoteRetrieveshow"
            android:screenOrientation="portrait" />
        <activity android:name=".RetrievePDF"  android:screenOrientation="portrait"/>
        <activity android:name=".SignUpActivity"  android:screenOrientation="portrait"/>
        <activity android:name=".MainActivity" android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".selflearn"
            android:theme="@style/Theme.Design.NoActionBar" />
        <activity
            android:name=".MainActivity2"
            android:label="@string/title_activity_main2"
            android:theme="@style/Theme.MyAppforuniversity.NoActionBar" />
    </application>

</manifest>