<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/presentationexam"
    tools:context=".ui.exam.ExamFragment">

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/examedit1"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:hint="Select file from storage"
        android:textStyle="italic"
        android:textColor="#3A786C"
        />

    <Button
        android:id="@+id/exameditbutton1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/examedit1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/custombutton"
        android:text="Upload File"
        android:textStyle="italic"
        app:backgroundTint="#BB4AD3" />

    <Button
        android:id="@+id/exameditbutton2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/exameditbutton1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/custombutton"
        android:text="Retrieve PDF File"
        android:textStyle="italic"
        app:backgroundTint="#D94FE8"
        android:layout_margin="10dp" />
</RelativeLayout>